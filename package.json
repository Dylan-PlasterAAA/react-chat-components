{
  "name": "@pubnub/react-chat-components-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "This monorepository uses npm v7 workspaces feature to crosslink dependencies between components library and sample applications.",
  "main": "index.js",
  "workspaces": [
    "packages/react",
    "packages/react-native",
    "samples"
  ],
  "scripts": {
    "postinstall": "cd packages/react-native && npx expo-yarn-workspaces postinstall",
    "start:rn": "cd packages/react-native && npm start",
    "start": "concurrently \"cd packages/react && npm run build:watch\" \"cd samples && npm run start\"",
    "build": "cd packages/react && npm run build",
    "test": "jest --config packages/react/jest.config.js",
    "test:watch": "jest --config packages/react/jest.config.js --watch",
    "samples": "cd samples && npm run start",
    "samples:build": "cd samples && npm run build",
    "samples:deploy": "npm run samples:build && gh-pages -d samples/build -e samples",
    "storybook": "start-storybook -p 6006 -c packages/react/docs",
    "storybook:build": "build-storybook -c packages/react/docs",
    "storybook:deploy": "npm run storybook:build && gh-pages -d storybook-static -e docs"
  },
  "devDependencies": {
    "@storybook/addon-actions": "6.2.2",
    "@storybook/addon-essentials": "6.2.2",
    "@storybook/addon-links": "6.2.2",
    "@storybook/addons": "6.2.2",
    "@storybook/react": "6.2.2",
    "@storybook/theming": "6.2.2",
    "concurrently": "^6.0.0",
    "node-sass": "^5.0.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "sass-loader": "^10.1.0"
  }
}
