{
  "name": "@pubnub/chat-components-monorepo",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "workspaces": {
    "packages": [
      "packages/*",
      "samples/*",
      "data",
      "docs"
    ]
  },
  "scripts": {
    "docs": "yarn workspace @pubnub/component-docs run storybook",
    "web": "concurrently \"yarn workspace @pubnub/react-chat-components build:watch\" \"yarn workspace @pubnub/web-group-chat start\"",
    "mobile": "concurrently \"yarn workspace @pubnub/react-native-chat-components build:watch\" \"yarn workspace @pubnub/mobile-group-chat start\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lerna": "^4.0.0",
    "prettier": "^2.1.2",
    "typescript": "^4.1.5"
  }
}
